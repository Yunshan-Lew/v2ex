/**index.wxss**/
.list-item{
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  border-bottom: 1rpx solid #eeeeee; 
  margin-bottom: 20rpx;
}
.list-info{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 0;
  clear: both;
  width: 100%
}
.list-member{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.list-c{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.list-avatar{
  width: 64rpx; 
  height: 64rpx; 
  background-color: #eeeeee;
  border-radius: 4px;
  margin-right: 20rpx;
}
.list-top{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width:100%;
}
.list-node{
  box-sizing: border-box;
  display: block;
  float: right;
  padding: 8rpx;
  border-radius: 6rpx;
  background-color: #eeeeee; 
  font-size:18rpx;
  color: #aaaaaa;
  font-weight: 100;
}
.list-username{
  font-size: 26rpx;
}

.list-plus{
   font-size: 26rpx;
   color: #999999;
}

.list-title{
  box-sizing: border-box;
  font-size: 32rpx;
  text-align: left;
  line-height: 1.5;
  padding-bottom: 30rpx;
}
.tab-nav{
  position: fixed;
  bottom: 0;
  height: 88rpx;
  width: 100%;
  background-color: #ffffff;
  border-top:1rpx solid #eeeeee;
	display: flex;
}
.tab-cell{
  text-align: center;
  color: #000;
  line-height: 2.8;
  font-size: 32rpx;
}
.tab-cell.current{
	color: #fff;
	background-color: #000;
}
.node-avatar{
	width: 120rpx;
	height: 120rpx;
}
.node-box{ 
	font-size: 24rpx;
	float: left;
	padding: 30rpx 0;
	border-right: 1px solid #ddd;
	border-bottom: 1px solid #ddd;
	box-sizing: border-box;
}
.node-box:nth-of-type(3){
	border-right: 0;
}
.node-avatar + view{
	font-weight: bold;
}